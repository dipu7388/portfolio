{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["ES2017", "ES2016", "ES2018", "ES2019", "ES2020", "ES2021"],
    "outDir": "dist",
    "baseUrl": ".",
    "importHelpers": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*", "src/*"]
    }
  },
  "include": ["src/**/*"]
}
